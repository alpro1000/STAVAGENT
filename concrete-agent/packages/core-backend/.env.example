# ==========================================
# STAVAGENT Backend - Environment Variables
# ==========================================

# ==========================================
# AI MODELS
# ==========================================

# Claude API (expensive - $0.10-0.50 per Multi-Role request)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Gemini API (FREE - 1500 req/day, or $0.002 per request paid)
GOOGLE_API_KEY=your-gemini-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# Multi-Role LLM: "gemini" (default), "claude", "auto" (Gemini + Claude fallback)
MULTI_ROLE_LLM=gemini

# OpenAI GPT-4 Vision (optional for Workflow B)
OPENAI_API_KEY=sk-your-key-here

# ==========================================
# GOOGLE DRIVE INTEGRATION (Day 1)
# ==========================================

# OAuth2 Credentials (from Google Cloud Console)
# Setup: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth2 Redirect URI (must match Google Cloud Console)
GOOGLE_OAUTH_REDIRECT_URI=https://concrete-agent.onrender.com/api/v1/google/callback

# Credential Encryption Key (generate with: openssl rand -base64 32)
GOOGLE_CREDENTIALS_ENCRYPTION_KEY=your-base64-encryption-key

# Webhook Secret Key (generate with: openssl rand -hex 32)
GOOGLE_WEBHOOK_SECRET_KEY=your-webhook-secret-key

# Public URL for webhooks
PUBLIC_URL=https://concrete-agent.onrender.com

# ==========================================
# DATABASE
# ==========================================

# SQLite (development)
DATABASE_PATH=/tmp/stavagent.db

# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# ==========================================
# REDIS
# ==========================================

# Redis URL (for session storage)
# REDIS_URL=redis://localhost:6379/0

# ==========================================
# KEEP-ALIVE SYSTEM
# ==========================================

# Keep-Alive secret key (generate with: openssl rand -base64 32)
KEEP_ALIVE_KEY=your-keep-alive-key

# ==========================================
# FEATURE FLAGS
# ==========================================

ENABLE_WORKFLOW_A=true
ENABLE_WORKFLOW_B=true
USE_MINERU=true
USE_CLAUDE_VISION=true
ENABLE_KROS_MATCHING=true
ENABLE_RTS_MATCHING=true
ENABLE_RESOURCE_CALCULATION=true

# ==========================================
# LOGGING
# ==========================================

LOG_LEVEL=INFO
LOG_CLAUDE_CALLS=true
LOG_GPT4_CALLS=true

# ==========================================
# ENVIRONMENT
# ==========================================

ENVIRONMENT=development
# ENVIRONMENT=production
